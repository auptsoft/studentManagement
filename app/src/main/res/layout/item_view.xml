<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/archdiocese_item_view_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <android.support.v7.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"

        android:layout_marginLeft="10dp">

    <ImageView
        android:id="@+id/item_image_icon_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_library_books_black_24dp"
        />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#00ffffff"
        app:cardCornerRadius="1dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/item_view_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Archdiocese of Benin"
                android:textColor="#212121"
                android:textAlignment="inherit"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Rev. Dr. Augustine Obiora Akubeze"
                android:textAlignment="inherit"
                android:textSize="14sp"
                android:layout_marginBottom="1dp"
                 />
            <!--<View
                android:id="@+id/line_id"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#aaaaaa"
                android:layout_marginTop="10dp"/> -->
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
